# Service Configuration
SERVICE_NAME=jarvis-edge
SERVICE_VERSION=1.0.0
USER_ID=default-user

# gRPC Configuration
GRPC_PORT=9091

# HTTP Configuration
HTTP_PORT=8081
EDGE_HTTP_PORT=8082

# MQTT Configuration
MQTT_BROKER_URL=tcp://localhost:9003
MQTT_CLIENT_ID=
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_QOS=1
MQTT_KEEP_ALIVE=30
MQTT_CONNECT_TIMEOUT=10
MQTT_AUTO_RECONNECT=true
MQTT_CLEAN_SESSION=true

# Sensor Configuration
SENSOR_ENABLED=true
SENSOR_POLL_INTERVAL=30
SENSOR_SIMULATE_DATA=true
SENSOR_SUPPORTED_SENSORS=heart_rate,sleep_quality,steps,calories,oxygen_level

# Nacos Configuration
NACOS_ENABLED=true
NACOS_SERVER_ADDR=localhost:8848
NACOS_NAMESPACE_ID=public
NACOS_GROUP_NAME=DEFAULT_GROUP
NACOS_SERVICE_NAME=jarvis-edge
NACOS_CLUSTER_NAME=DEFAULT
NACOS_PORT=9091
NACOS_IP=127.0.0.1
